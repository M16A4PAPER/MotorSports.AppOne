<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotorSports.AppOne.Views.ParticipantPage"
             Title="ParticipantPage">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <!-- Image as background -->
        <Image Source="designer_4.jpeg"
               Aspect="Fill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"/>

        <!-- Dark overlay to darken the background -->
        <BoxView Color="Black" Opacity="0.45" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        <!-- Layout for buttons and label -->
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
            <Label 
                Text="Welcome to the Participant Options!"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="Century Gothic" />

            <Button 
                Text="View Upcoming Races"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="Century Gothic"
                Clicked="ButtonViewUpcomingRaces_Click" />

            <Button 
                Text="Register for Race"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="Century Gothic"
                Clicked="ButtonRegisterForRace_Click" />

            <Button 
                Text="View Results"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="Century Gothic"
                Clicked="ButtonViewResults_Click" />
        </StackLayout>
    </Grid>
</ContentPage>
