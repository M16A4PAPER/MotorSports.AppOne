<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotorSports.AppOne.Views.ManageUsersAndRoles"
             Title="Manage Users and Roles">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <!-- Background Image -->
        <Image Source="designer_2.jpeg"
               Aspect="Fill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"/>

        <!-- Dark overlay -->
        <BoxView Color="Black" Opacity="0.45" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        <!-- Layout for Go Back Button -->
        <StackLayout Padding="10">
            <Button Text="Go Back"
                    FontFamily="Century Gothic"
                    Clicked="GoBack_Click"/>
        </StackLayout>

        <!-- Layout for main buttons -->
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
            <Button 
                Text="Assign Role to User"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="Century Gothic"
                Clicked="AssignRole_Click" />

            <Button 
                Text="Remove Role from User"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="Century Gothic"
                Clicked="RemoveRole_Click" />

            <Button 
                Text="View Users and Roles"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="Century Gothic"
                Clicked="ViewUsersRoles_Click" />
        </StackLayout>
    </Grid>
</ContentPage>
