<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotorSports.AppOne.Views.SetEventStatus"
             Title="Set Event Status">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <!-- Background Image -->
        <Image Source="designer_3.jpeg"
               Aspect="Fill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"/>

        <!-- Dark Overlay -->
        <BoxView Color="Black" Opacity="0.45" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        <!-- Form Layout -->
        <StackLayout Padding="20" Spacing="15"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">

            <Label Text="Set Event Status"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontFamily="Century Gothic"/>

            <Entry x:Name="EventIdEntry"
                   Placeholder="Enter Event ID"
                   Keyboard="Numeric"
                   FontFamily="Century Gothic"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="StatusIdEntry"
                   Placeholder="Enter Status ID"
                   Keyboard="Numeric"
                   FontFamily="Century Gothic"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Button Text="Submit"
                    FontFamily="Century Gothic"
                    Clicked="OnSubmitClicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
