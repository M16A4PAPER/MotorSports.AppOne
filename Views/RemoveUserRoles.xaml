<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotorSports.AppOne.Views.RemoveUserRoles"
             Title="Remove User Role">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <!-- Background Image -->
        <Image Source="designer_4.jpeg"
               Aspect="Fill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"/>

        <!-- Dark Overlay -->
        <BoxView Color="Black" Opacity="0.45" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        <!-- Layout for Go Back Button -->
        <StackLayout Padding="10">
            <Button Text="Go Back"
                    FontFamily="Century Gothic"
                    Clicked="OnGoBackClicked"/>
        </StackLayout>

        <!-- Form Layout -->
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15" Padding="20">
            <Label Text="Remove Role from User"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontFamily="Century Gothic" />

            <Entry x:Name="UserIdEntry"
                   Placeholder="Enter User ID"
                   Keyboard="Numeric"
                   FontFamily="Century Gothic"
                   TextColor="Black"
                   BackgroundColor="White"/>

            <Entry x:Name="RoleIdEntry"
                   Placeholder="Enter Role ID"
                   Keyboard="Numeric"
                   FontFamily="Century Gothic"
                   TextColor="Black"
                   BackgroundColor="White"/>

            <Button Text="Submit"
                    FontFamily="Century Gothic"
                    Clicked="OnSubmitClicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
