<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotorSports.AppOne.Views.ViewAllEventsPage"
             Title="All Events">
    <StackLayout>
        <Button Text="Go Back" Clicked="ButtonGoBack_Click"/>

        <CollectionView x:Name="EventsCollectionView"
        Grid.Row="4"
        ItemsSource="{Binding EventsList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold"/>
                            <Label Text="{Binding Date}" FontSize="16"/>
                            <Label Text="{Binding Location}" FontSize="14" TextColor="Gray"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>