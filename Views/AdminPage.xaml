<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotorSports.AppOne.Views.AdminPage"
             Title="AdminPage">
    <Grid VerticalOptions="Center" HorizontalOptions="Center" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label 
            Text="Welcome to the Admin Options!"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="0" />

        <Button 
            Text="Manage Users and Roles"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Clicked="ButtonManageUsersAndRoles_Click"
            Grid.Row="1" />

        <Button 
            Text="Manage Event Statuses"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Clicked="ButtonManageEventStatus_Click"
            Grid.Row="2" />
    </Grid>
</ContentPage>