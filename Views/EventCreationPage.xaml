<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotorSports.AppOne.Views.EventCreationPage"
             Title="Event Creation">

    <ScrollView>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Text="Go Back" Clicked="Button_GoBackClick" Grid.Row="0"/>

            <Label Text="Event Name:" Grid.Row="1"/>
            <Entry x:Name="txtEventName" Grid.Row="1" Placeholder="Enter event name"/>

            <Label Text="Venue ID:" Grid.Row="2"/>
            <Entry x:Name="txtVenueId" Grid.Row="2" Placeholder="Enter venue ID" Keyboard="Numeric"/>

            <Label Text="Event Date (yyyy-mm-dd):" Grid.Row="3"/>
            <Entry x:Name="txtEventDate" Grid.Row="3" Placeholder="YYYY-MM-DD"/>

            <Label Text="Total Laps:" Grid.Row="4"/>
            <Entry x:Name="txtTotalLaps" Grid.Row="4" Placeholder="Enter total laps" Keyboard="Numeric"/>

            <Label Text="Status ID:" Grid.Row="5"/>
            <Entry x:Name="txtStatusId" Grid.Row="5" Placeholder="Enter status ID" Keyboard="Numeric"/>

            <Button Text="Submit" Clicked="SubmitButton_Click" Grid.Row="6" BackgroundColor="Green" TextColor="White"/>

            <Label x:Name="lblMessage" Grid.Row="7" TextColor="Red" FontAttributes="Bold"/>
        </Grid>
    </ScrollView>
</ContentPage>
